{
  "manifest_version": 2,
  "name": "Budget Manager",
  "version": "1.0",
  "description": "This extension records your spending and budgets it.",
  "browser_action": {
    "default_popup": "popup.html",
    "scripts": ["popup.js"]
  },
  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },
  "options_page": "options.html",
  "permissions": ["storage", "notifications", "contextMenus"]
}
